  overflow-x: hidden;
  background: #000 !important;
}

.portfolio-container {
  font-family: 'Orbitron', 'Segoe UI', Arial, sans-serif;
  color: #232323;
  min-height: 100vh;
  width: 100%;
  padding: 0;
  margin: 0;
  position: relative;
  animation: ps2Startup 1.5s ease-out, verticalWave 8s ease-in-out infinite;
  z-index: 0;
}

/* Override for contact page */
.portfolio-container:has(.contact-section) {
  background: #000 !important;
}

/* Default for home page */
.portfolio-container:has(.home-container) {
  background: #b0b0b0;
  position: relative;
}

.portfolio-container:has(.home-container)::before {
  content: '';
  position: fixed;
  inset: 0;
  background: 
    url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.6' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%' height='100%' filter='url(%23noise)' opacity='0.15'/%3E%3C/svg%3E"),
    linear-gradient(0deg, rgba(0, 0, 0, 0.05) 1px, transparent 1px),
    linear-gradient(90deg, rgba(0, 0, 0, 0.05) 1px, transparent 1px);
  background-size: 100% 100%, 20px 20px, 20px 20px;
  pointer-events: none;
  opacity: 0.7;
  z-index: 0;
}

/* No global CRT noise overlay by default */
.portfolio-container::before {
  display: none;
}

/* No global scanlines by default */
.portfolio-container::after {
  display: none;
}

/* Additional horizontal scanning line */
.portfolio-container > * {
  position: relative;
  z-index: 2;
}

header {

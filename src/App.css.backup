@keyframes cardPulse {
  0%, 100% { transform: scale(1); box-shadow: 0 10px 40px rgba(0,0,0,0.8), 0 0 0 2px rgba(0, 186, 255, 0.4), inset 0 0 30px rgba(0, 186, 255, 0.1); }
  50% { transform: scale(1.005); box-shadow: 0 15px 50px rgba(0,0,0,0.9), 0 0 0 2px rgba(0, 186, 255, 0.6), inset 0 0 40px rgba(0, 186, 255, 0.2); }
}


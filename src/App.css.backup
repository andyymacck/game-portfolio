/* Navigation styles */
/* Navigation overlay */
.menu-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  opacity: 0;
  visibility: hidden;
  transition: opacity 0.3s ease, visibility 0.3s ease;
  z-index: 4999;
}

.menu-overlay.visible {
  opacity: 1;
  visibility: visible;
}

/* Hamburger button */
.hamburger-menu {
  position: fixed;
  top: 12px;
  left: 12px;
  width: 40px;
  height: 40px;
  padding: 8px;
  background: rgba(0, 0, 0, 0.7);
  border: 1px solid rgba(0, 186, 255, 0.3);
  border-radius: 4px;
  cursor: pointer;
  z-index: 5002;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.hamburger-line {
  width: 100%;
  height: 2px;
  background-color: #00baff;
  box-shadow: 0 0 8px rgba(0, 186, 255, 0.5);
  transition: transform 0.3s ease, opacity 0.3s ease;
}

.hamburger-menu:hover {
  background: rgba(0, 186, 255, 0.1);
}

.hamburger-menu.open .hamburger-line:nth-child(1) { transform: translateY(9px) rotate(45deg); }
.hamburger-menu.open .hamburger-line:nth-child(2) { opacity: 0; }
.hamburger-menu.open .hamburger-line:nth-child(3) { transform: translateY(-9px) rotate(-45deg); }

